{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./build/",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "./",
        "baseUrl": "./",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build", "dist"]
}
